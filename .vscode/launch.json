    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Service",
            "request": "launch",
            "module": "keyboard",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": ["service", "--continuous", "--service-port", "1234"]
        }
    ]
}